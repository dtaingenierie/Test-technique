{% extends 'base.html.twig' %}

{% block body %}
<form method="POST">
    <div class="form-container">
        <div class="row">
            <div class="input-container">
                {{ form_label(form.firstname) }}
                {{ form_errors(form.firstname) }}
                {{ form_widget(form.firstname) }}
                {% if errors.firstname %}
                    <div class="error">Invalid name, too short or contains numbers</div>
                {% endif %}
            </div>
                <div class="space"></div>
            <div class="input-container">
                {{ form_label(form.lastname) }}
                {{ form_errors(form.lastname) }}
                {{ form_widget(form.lastname) }}
                {% if errors.lastname %}
                    <div class="error">Invalid name, too short or contains numbers</div>
                {% endif %}
            </div>
        </div>
        <div class="row">
            <div class="input-container">
                {{ form_label(form.country) }}
                {{ form_errors(form.country) }}
                {{ form_widget(form.country) }}
            </div>
        </div>
        <div class="row">
            <div class="input-container">
                {{ form_label(form.phonenumber) }}
                {{ form_errors(form.phonenumber) }}
                {{ form_widget(form.phonenumber) }}
                {% if errors.phonenumber %}
                    <div class="error">Invalid phone number</div>
                {% endif %}
            </div>
        </div>
        <div class="row">
            <div class="input-container">
                {{ form_widget(form.callme) }}
            </div>
        </div>
    </div>
</form>
{% endblock %}

{% block stylesheets %}
<style>
    body {
        background-color: #f5f5f5;
        font-family: Arial
    }
    .row {
        display: flex;
        justify-content: space-between;
        margin: 10px 150px;
    }
    .space {
        width: 15px;
    }
    .form-container {
        display: flex;
        flex-direction: column;
        justify-content: center;
        height: 400px;
        width: 700px;
        background-color: #fff;
        margin: auto;
        margin-top: 150px;
        border-radius: 2px;
        box-shadow: 0px 2px 7px #bdbdbd;

    }
    .input-container {
        display: flex;
        flex-direction: column;
        width: 100%;
    }
    .class-input {
        padding: 0.7em;
        border: 1px solid #e85711;
        border-radius: 3px;
    }
    .class-label {
        margin-bottom: 0.2em;
    }
    .class-error-input {
        background: blue;
        padding: 2em;
        border: 1px solid orange;
    }
    .class-button {
        color: #fff;
        background-color: #ed7941;
        border: none;
        padding: 0.7em;
        border-radius: 2px;
    }
    .class-button:hover {
        background-color: #e85711
    }
    .error {
        color: red;
        font-size: 12px;
    }
</style>
{% endblock %}